<%= form_with model: @encuentro do |form| %>
    <div class="field is-horizontal">
        <div class="field-label is-normal">
        </div>
        <div class="field-body">
            <% if flash[:notice] %>
                <div class="notification is-success"><%= flash[:notice] %></div>
            <% end %>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">TÃ­tulo</label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input type="text" class="input" value="Encuentro de...">
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <%= form.label :fotos, class: 'label' %>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <% if @encuentro.fotos.attached? %>
                        <% @encuentro.fotos.each do |f| %>
                            <%= image_tag f.variant(
                                combine_options: {
                                    resize: '250',
                                    crop: '250x250+0+0',
                                    gravity: 'north'
                                }
                            ), class: 'is-square' %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <% unless 'show' == params[:action] %>
    <div class="field is-horizontal">
        <div class="field-label is-normal">
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= form.button class: 'button is-primary' %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
<% end %>
