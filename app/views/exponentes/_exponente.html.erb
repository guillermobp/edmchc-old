<%= form_with model: @exponente do |form| %>
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <%= form.label :nombre, class: 'label' %>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= form.text_field :nombre, class: 'input' %>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <%= form.label :foto, class: 'label' %>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <div class="file">
                        <label class="file-label">
                            <%= form.file_field :foto, class: 'file-input' %>
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Examinar
                                </span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <%= form.label :bio, class: 'label' %>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= form.text_area :bio, class: 'textarea' %>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= form.button class: 'button is-primary' %>
                </div>
            </div>
        </div>
    </div>
<% end %>
