<section class="hero has-background-dark is-fullheight-with-navbar" id="exponentes">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white">Exponentes</h1>
      <div class="columns is-multiline is-mobile">
        <% @exponentes.each do |e|%>
        <div class="column is-4">
          <div class="card" style="height:100%">
            <div class="card-image">
              <figure class="image is-square">
                <% if (e.foto.attached?) %>
                  <%= image_tag e.foto.variant(
                    combine_options: {
                      resize: '400',
                      crop: '400x400+0+0',
                      gravity: 'north'
                    }
                  ), class: 'is-square' %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= e.nombre %></p>
                </div>
              </div>

              <div class="content has-text-left">
                <%= simple_format(truncate(e.bio, length: 400, separator: '')) %>
                <p><%= link_to 'Ver mÃ¡s' %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
