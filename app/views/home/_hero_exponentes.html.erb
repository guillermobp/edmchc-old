    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white">Exponentes</h1>
      <div class="columns is-multiline is-mobile">
        <%# Exponentes %>
        <% @exponentes.each do |e|%>
        <div class="column is-4">
          <div class="card" style="height:100%">
            <div class="card-image">
              <figure class="image is-square">
                <img src="<%= e.uri_foto %>" alt="Foto de <%= e.nombre %>">
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= e.nombre %></p>
                </div>
              </div>

              <div class="content">
                <%= simple_format(truncate(e.bio, length: 400, separator: '')) %>
                <p><%= link_to 'Ver mÃ¡s' %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
