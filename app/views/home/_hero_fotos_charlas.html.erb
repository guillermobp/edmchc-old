<section class="hero has-background-dark is-fullheight-with-navbar" id="fotos-charlas">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white">Fotos Charlas 2017</h1>
      <div class="columns is-multiline is-mobile is-gapless">
        <% @exponentes.each do |e|%>
        <div class="column is-3">
          <div class="card" style="height:100%">
            <div class="card-image">
              <figure class="image is-square">
                <% if (e.foto.attached?) %>
                  <%= image_tag e.foto.variant(
                    combine_options: {
                      resize: '300',
                      crop: '300x300+0+0',
                      gravity: 'north'
                    }
                  ), class: 'is-square' %>
                <% end %>
              </figure>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
